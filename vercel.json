{
  "version": 2,
  "buildCommand": "cd ../.. && pnpm install && cd src/web && pnpm build",
  "outputDirectory": ".next",
  "installCommand": "cd ../.. && pnpm install",
  "framework": "nextjs",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.akarimystic.club"
        }
      ],
      "destination": "https://akarimystic.club/:path*",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/cron/sentiment-update",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/inner-circle-update",
      "schedule": "0 8 * * 0"
    },
    {
      "path": "/api/portal/cron/sentiment-smart-refresh",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/portal/cron/sentiment-refresh-all",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/portal/cron/project-audience-geo",
      "schedule": "0 4 * * 2,5"
    }
  ]
}
