{
  "version": 2,
  "buildCommand": "cd ../.. && pnpm install && cd src/web && pnpm build",
  "outputDirectory": ".next",
  "installCommand": "cd ../.. && pnpm install",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/sentiment-update",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/inner-circle-update",
      "schedule": "0 8 * * 0"
    }
  ]
}
