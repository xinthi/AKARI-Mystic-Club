{
  "name": "akari-mystic-bot",
  "version": "1.0.0",
  "description": "AKARI Mystic Club Telegram Mini App Bot",
  "private": true,
  "workspaces": [
    "src/bot",
    "src/web"
  ],
  "scripts": {
    "setup": "pnpm install && pnpm prisma:push && pnpm prisma:generate && pnpm prisma:seed",
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "lint": "pnpm --filter web lint",
    "guard:forbidden": "node scripts/guard-forbidden.mjs",
    "verify": "pnpm guard:forbidden && pnpm lint && pnpm build",
    "postinstall": "pnpm exec prisma generate --schema=./prisma/schema.prisma",
    "prisma:push": "pnpm exec prisma db push --schema=./prisma/schema.prisma",
    "prisma:generate": "pnpm exec prisma generate --schema=./prisma/schema.prisma",
    "prisma:seed": "pnpm exec tsx prisma/seed.ts",
    "prisma:studio": "pnpm exec prisma studio --schema=./prisma/schema.prisma",
    "db:reset": "pnpm prisma:push && pnpm prisma:seed",
    "db:cleanup": "pnpm exec tsx prisma/cleanup.ts",
    "sentiment:update": "ts-node --transpile-only scripts/sentiment/updateAllProjects.ts",
    "circles:update": "ts-node --transpile-only scripts/sentiment/updateCircles.ts",
    "circles:quick": "ts-node --transpile-only scripts/sentiment/buildCirclesQuick.ts",
    "inner-circle:update": "ts-node --transpile-only scripts/sentiment/updateInnerCircle.ts"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "prisma": "5.9.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/client": "5.9.1",
    "@supabase/supabase-js": "^2.86.2",
    "axios": "^1.13.2",
    "dotenv": "^16.4.5",
    "tsx": "^4.7.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
